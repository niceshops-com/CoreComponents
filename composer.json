{
    "name": "robertkleinschuster/nice-core",
    "description": "Niceshops Core Components",
    "license" : "BSD-3-Clause",
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Niceshops\\Core\\": "src/"
        }
