{
    "name": "robertkleinschuster/nice-core",
    "description": "Niceshops Core Components",
    "license" : "BSD-3-Clause",
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Niceshops\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Niceshops\\Core\\": "test/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "check": [
            "@cs-check",
            "@test"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
